<!DOCTYPE html>
<html>
<head>
    <title>Rain Prediction</title>
</head>
<body>
    <h2>Rain Prediction Form</h2>

    <form action="/predict" method="POST">
        <input type="number" step="any" name="ALLSKY_SFC_SW_DWN" placeholder="ALLSKY_SFC_SW_DWN" required><br>
        <input type="number" step="any" name="T2M" placeholder="T2M" required><br>
        <input type="number" step="any" name="T2M_MAX" placeholder="T2M_MAX" required><br>
        <input type="number" step="any" name="T2M_MIN" placeholder="T2M_MIN" required><br>
        <input type="number" step="any" name="RH2M" placeholder="RH2M" required><br>
        <input type="number" step="any" name="WS2M" placeholder="WS2M" required><br>
        <button type="submit">Predict</button>
    </form>

    <% if (typeof prediction !== "undefined") { %>
        <h3>Prediction Result:</h3>
        <p><strong>Rain Today:</strong> <%= prediction === 1 ? "Yes" : "No" %></p>
        <p><strong>Probability:</strong> <%= probability %></p>

        <h4>Your Input:</h4>
        <ul>
            <% for (let key in input) { %>
                <li><%= key %>: <%= input[key] %></li>
            <% } %>
        </ul>
    <% } %>

    <p><a href="/dashboard">Back to Dashboard</a></p>
</body>
</html>
